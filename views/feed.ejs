<%- include('partials/header') -%>
<!-- Table -->
<div class="overflow-x-auto w-full" data-theme="light">
  <table class="table w-full">
    <!-- head -->
    <thead>
      <tr>
        <th>
          <label>
            <input type="checkbox" class="checkbox" />
          </label>
        </th>
        <th>Name</th>
        <th>Description</th>
        <th>Priority</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <!-- row 1 -->
      <% for(var i=0; i<bugs.length; i++) {%>
      <tr>
        <th>
          <label>
            <input type="checkbox" class="checkbox" />
          </label>
        </th>
        <td>
          <div class="flex items-center space-x-3">
            <div class="avatar">
              <div class="mask mask-squircle w-12 h-12">
                <img src="<%= bugs[i].image%>" alt="Avatar Tailwind CSS Component" />
              </div>
            </div>
            <div>
              <div class="font-bold"><%= bugs[i].name%></div>
              <div class="text-sm opacity-50">...</div>
            </div>
          </div>
        </td>
        <td>
          <%= bugs[i].description%>
          <br>
          <span class="badge badge-ghost badge-sm">...</span>
        </td>
        <td><%= bugs[i].priority.toUpperCase()%></td>
        <th>
          <a class="btn btn-ghost btn-xs" href="/bug/<%= bugs[i]._id%>">details</a>
        </th>
      </tr>
      <% } %>

      <!-- foot -->
    <tfoot>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Description</th>
        <th>Priority</th>
        <th></th>
      </tr>
    </tfoot>

  </table>
</div>
<%- include('partials/footer') -%>