<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2 class="fs-2"><%= bug.name %></h2>
      <img class="img-fluid" src="<%= bug.image%>" />
      
      <div class="row justify-content-between">
        <!-- EXAMPLE OF PUT OVERRIDE -->
        <!-- <form class="col-1" action="/bug/likeBug/<%= bug.id %>?_method=PUT" method="POST">
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= bug.likes %></h3> -->
        <%if(bug.user == user.id){ %>
        <form action="/bug/deleteBug/<%= bug.id %>?_method=DELETE" method="POST" class="col-3">
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
      
        <form action="/comment/createComment/<%=bug.id%>" method="POST">
        <div class="mb-3">
          <label for="comment" class="form-label">Add Comment</label>
          <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary" value="Comment">Submit</button>
        </form>

      </div>
      <div class="col-3 mt-5">
        <p><%= bug.caption %></p>
        <!-- Comments mapped -->
        <span>Comments</span>
        <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">

          <%= comments[i].comment%>

        </li>
        <% } %>
      </div>
      <div class="col-6 mt-5">
        <a class="btn btn-primary" href="/profile">Return to Profile</a>
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') -%>